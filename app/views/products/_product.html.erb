<article class="product">
  <header>
    <%= link_to product do %>
      <%= image_tag product.image.thumb, alt: product.name %>
      <h4><%= product.name %></h4>
    <% end %>
  </header>
  <div class="description">
    <p><%= product.description %></p>
    <p><strong>Rating: </strong><%= product.review.average(:rating).to_f.round(1) %> /  5.0‚≠ê (<%= product.review.count%>)</p>
  </div>
  <footer class="actions">
    <%= button_to add_item_cart_path(product_id: product.id), class: 'btn btn-primary' , method: :post do %>
      <%= fa_icon "shopping-cart", text: 'Add' %>
    <% end %>
    <%= link_to product, class: 'btn btn-default pull-right' do %>
      Details &raquo;
    <% end %>
  </footer>

  <aside class="price">
    <%= humanized_money_with_symbol product.price %>
  </aside>
  <% if product.quantity.zero? %>
    <aside class="sold-out">
      SOLD OUT!
    </aside>
  <% end %>
</article>
